<!DOCTYPE html>
<html lang="en">
   <%- include('partials/_head') -%>
   <!-- body -->
   <body class="main-layout">
      <%- include('partials/_navigate') -%>
       <div class="back_re">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <div class="title">
                   <h2>Latest News</h2>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- latest news -->
      <div class="latest">
         <div class="container">
            <div class="row">
               <div class="col-sm-12">
                  <div class="news_img">
                     <figure><img src="<%= course.file %>" alt="#"/></figure>
                  </div>
               </div>
            </div>
            <div class="row">
               <div class="col-md-12">
                  <div class="titlepage">
                     <p><%=course.dec %></p>
                     <p>Author: <a href="/user/<%=course.author.slug %>"><%=course.author.name %></a></p>
                  </div>
                  <% if(user.role === "Studient" && !user.courses.includes(course._id)){ %>
                     <a href="/api/enrole/<%= course.slug %>" class="btn btn-warning">enrole</a>
                  <%}%>
                  <% if(user.role === "Studient" && user.courses.includes(course._id)){ %>
                     <a href="/api/quit/<%= course.slug %>" class="btn btn-danger">quit</a>
                  <%}%>
               </div>
            </div>
         </div>
      </div>
      <%- include('partials/_footer') -%>
   </body>
</html>
