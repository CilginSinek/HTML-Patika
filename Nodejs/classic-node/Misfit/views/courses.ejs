<!DOCTYPE html>
<html lang="en">
   <%- include('partials/_head') -%>
   <!-- body -->
   <body class="main-layout">
      <%- include('partials/_navigate') -%>
        <div class="back_re">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <div class="title">
                   <h2>Courses</h2>
                  </div>
               </div>
            </div>
         </div>
      </div>
      <!-- trainers -->
      <div  class="trainers">
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <div class="titlepage">
                     <p>Lorem Ipsum available, but the majority have suffered </p>
                  </div>
               </div>
            </div>
            <div class="row">
               <% courses.forEach((course)=>{  %>
               <div class="col-md-4">
                  <div id="trai" class="trainer_box">
                     <div class="trainer_img">
                        <figure><a href="/course/<%= course.slug %>"><img src="<%= course.file %>" alt="#"/></a></figure>
                     </div>
                     <div class="trainer">
                        <h3><%= course.name %></h3>
                        <p><a href="/user/<%= course.author.slug %>"><%= course.author.name %></a></p>
                     </div>
                  </div>
               </div>
               <% })%>
            </div>
         </div>
      </div>
      <%- include('partials/_footer') -%>
   </body>
</html>
